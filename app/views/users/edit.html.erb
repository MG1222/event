  <div class="container">
  <div class="py-5 text-center">
    <img class="d-block mx-auto mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h2>Tu veux vraiment changer ton profil <%= @user.first_name %> ?</h2>
  <!--  <p class="lead">Tu veux changer ton profil ? </p> -->
  </div>
  <%= form_tag user_path(@user.id), method: "patch", class: "form-group" do %>
    <div class="col-md-12 order-md-1">
      <h4 class="mb-3">Mon Profil</h4>
      <form class="needs-validation" novalidate>
        <div class="row">
    <!-- Firts_name -->
          <div class="col-md-6 mb-3">
            <%= label_tag 'Prenom' %>
            <%= text_field_tag 'first_name', @user.first_name, class: "form-control" %>
          </div>
    <!-- Last_name -->
          <div class="col-md-6 mb-3">
            <label for="lastName">Nom</label>
            <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>
        </div>
<!-- TODO: Ville
        <div class="mb-3">
          <label for="address">Ville</label>
          <input type="text" class="form-control" id="address" placeholder="Bordeaux" required>
          <div class="invalid-feedback">
            Vraiment ? 
          </div>
        </div>
 -->

 <!-- Description -->
        <div class="col-md-12 mb-6">
        <%= label_tag 'Description' %>
          <%= text_area_tag 'description', @user.description, rows: 3, class: "form-control" %>       
              <div class="invalid-feedback">
              Dit nous plus :) 
            </div>
          </div>
        </div>
<!-- Button -->
       <hr class="mb-4">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="same-address">
          <label class="custom-control-label" for="same-address">T'es sur que tu veux changer ton profil ?</label>
        </div>
        <%= submit_tag 'Modifier', class: "btn btn-primary"  %>
        <hr class="mb-4">
        <% end %>
      </div>





