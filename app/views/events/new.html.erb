<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br>
      <h2 class="h3 mb-3 font-weight-normal text-center">Cree un event</h2>
          <%= form_tag events_path, method: "post", class: "form-group" do %>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'Titre' %> <span class="text-muted"><small>(5.character min)</small></span>
              <%= text_field_tag 'title', nil, class: "form-control" %>
            </div>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'Adresse' %>
              <%= text_field_tag 'location', nil, class: "form-control" %>
            </div>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'Date et Heure' %>
              <%= text_field_tag 'start_date', nil, class: "form-control" %>
            </div>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'DurÃ©e' %> <span class="text-muted"><small>(ex.60 min)</small></span>
              <%= text_field_tag 'duration', nil, class: "form-control" %>
            </div>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'Description' %>
              <%= text_area_tag 'description', nil, rows: 3, class: "form-control" %>
            </div>

            <div class="col-md-12 order-md-1">
              <%= label_tag 'Prix' %>
              <%= text_field_tag 'price', nil, class: "form-control" %>
            </div> <br>     
 
            <div class="col-md-12 order-md-1">
              <%= submit_tag "Cree", class: "btn btn-primary btn-block", data_dismiss: "modal" %>
            </div>
        <% end %>



      </div>
    </div>
</div>


